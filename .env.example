# Environment Variables for AI Video Automation Pipeline
# Copy this file to .env and customize the values

# Application Settings
PROJECT_NAME="AI Video Automation Pipeline"
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
API_V1_STR=/api/v1

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=ai_video_automation
POSTGRES_PORT=5432
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_video_automation

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379/0

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=/tmp/ai_video_automation/uploads
PROCESSED_DIR=/tmp/ai_video_automation/processed

# AWS S3 Configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
DID_API_KEY=your-did-api-key
SYNTHESIA_API_KEY=your-synthesia-api-key
HEYGEN_API_KEY=your-heygen-api-key

# Social Media API Keys
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Monitoring
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Video Processing
MAX_VIDEO_SIZE_MB=100
MAX_VIDEO_DURATION_SECONDS=300
FFMPEG_BINARY=ffmpeg
FFPROBE_BINARY=ffprobe